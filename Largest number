largest_number = -999999999999999999999999999999999999999999999999999999999999999999999999

number = (input("\nEnter a number or type STOP to stop: "))

while number != str("STOP"):
    if int(number) > int(largest_number):
        largest_number = number
    number = (input("\nEnter a number or type STOP to stop: "))

print("The largest number is:", largest_number)
