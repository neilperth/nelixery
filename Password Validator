numeral_counter = 0
upper_counter = 0
lower_counter = 0
special_counter = 0

passwd = input("Enter your password: ")

if len(passwd) > 7:
    for x in passwd:

        if any(x.isdigit() for x in passwd):
            numeral_counter += 1
        else:
            print("Password must contain at least one numeral")
            break

        if any(x.isupper() for x in passwd):
            upper_counter += 1
        else:
            print("Password must contain at least one upper case alphabetic")
            break

        if any(x.islower() for x in passwd):
            lower_counter += 1
        else:
            print("Password must contain at least one lower case alphabetic")
            break

        if x == "!" or x == "@" or x == "#" or x == "$" or x == "%" or x == "&":
            special_counter += 1
        else:
            print("Password must contain at least one special character (!, @, #, $, %, or &)")
            break
else:
    print("Password must be at least 8 characters")

if (numeral_counter > 0 and upper_counter > 0 and lower_counter > 0
        and special_counter > 0 and numeral_counter + upper_counter +
        lower_counter + special_counter == len(passwd)):
    print("The password is valid")
else:
    print("The password is invalid")
